<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="kt_booking_view_form" model="ir.ui.view">
        <field name="name">kt_booking_view_form</field>
        <field name="model">kt.booking</field>
        <field name="arch" type="xml">
            <form string="kt_booking_form">
                <header>
                    <field name="state" widget="statusbar"/>
                    <button type="object" name="rest_to_draft" string="Rest to Draft"/>
                    <button type="object" class="btn btn-primary" invisible="state != 'draft'" name="make_booking"
                            string="Booking"/>
                    <button type="object" class="btn btn-primary" invisible="state != 'booking'" name="make_arrived"
                            string="Arrived"/>
                    <button type="object" class="btn btn-warning" invisible="state != 'booking'" name="make_cancel"
                            string="Cancel"/>
                </header>
                <sheet>
                    <group>
                        <group string="Customer Information">
                            <field name="customer_id" readonly="state != 'draft'"/>
                        </group>
                        <group string="Driver Information">
                            <field name="driver_id" readonly="state != 'draft'"/>
                        </group>
                    </group>

                    <group>
                        <group string="Start Information">
                            <field name="start_latitude" readonly="state != 'draft'"/>
                            <field name="start_longitude" readonly="state != 'draft'"/>
                            <field name="start_kilo" readonly="state != 'draft'"/>
                        </group>
                        <group string="Arrived Information">
                            <field name="end_kilo" readonly="state != 'draft'"/>
                            <field name="currency_id" readonly="state != 'draft'"/>
                            <field name="amount" readonly="state != 'draft'"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="kt_booking_action" model="ir.actions.act_window">
        <field name="name">Booking</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">kt.booking</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>